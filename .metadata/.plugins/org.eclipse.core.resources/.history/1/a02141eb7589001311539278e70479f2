package com.example.imagecachingsample;

import android.app.Dialog;
import android.content.Context;

/**
 * @author prasad
 *
 */
public class Utils {
	private static Dialog progressBar;
	public static void progressBar(Context context, boolean show) {
		if(show) {
			progressBar = CustomProgressBar.show(context,"","");
		} else {
			progressBar.dismiss();
		}
	}
}
